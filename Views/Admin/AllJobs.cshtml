@{
    ViewBag.Title = "AllJobs";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@using Template.Models;
@model System.Collections.ArrayList
<link href="~/datatables/jquery.dataTables.min.css" rel="stylesheet" />
<script src="~/datatables/dataTables.bootstrap.min.js"></script>
<link href="~/datatables/dataTables.bootstrap.css" rel="stylesheet" />
<script src="~/jQuery/jQuery-2.1.4.min.js"></script>
<script>
    function GetJobDetail(caller) {
        var user = $(caller).val();
        $.ajax({
            url: '/Admin/DetailsJob',
            contentType: 'application/html; charset=utf-8',
            data: { id: user },
            type: 'GET',
            dataType: 'html'
        })
        .success(function (result) {
            $("#fuckoff").html(result);
        })
        .error(function (xhr, status) {
            alert(status);
        })
    }
</script>
<html>
<body>

    <div class="content-wrapper">
        <section class="content-header">
            <h1>
                Jobs

            </h1>
            <ol class="breadcrumb">
                <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
                <li><a href="#">Admin</a></li>

                <li class="active">Organization tables</li>
            </ol>
        </section>

        <section class="content">
            <div class="row">
                <div class="col-xs-12">
                    <div class="box">
                        <div class="box-header">
                            <div class="panel panel-primary">
                                <div id="fuckoff" class="panel-body">

                                </div>
                            </div>
                        </div>
                        <div class="box-body">
                            <table id="example2" class="table table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Name</th>
                                        <th>Company</th>
                                        <th>Posted On</th>
                                        <th>Location</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach(Job job in Model)
                                    { 
                                    <tr>
                                        <td>@job.Id</td>
                                        <td>@job.JobName</td>
                                        <td>@job.CompanyName</td>
                                        <td>@job.Date_Posted</td>
                                        <td>@job.Location</td>
                                        <td>
                                            <input type="submit" placeholder="Detail" value="@job.Id" onclick="GetJobDetail($(this))">
                                            /
                                            @Html.ActionLink("Delete", "DeleteJob", new { id = job.Id })
                                        </td>
                                    </tr>
                                    }
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</body>
</html>
