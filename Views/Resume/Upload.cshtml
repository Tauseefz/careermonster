@{
    ViewBag.Title = "Upload";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model Template.Models.Resume
<link href="~/bootstrap-3.3.4-dist/css/bootstrap-theme.css" rel="stylesheet" />
<link href="~/bootstrap-3.3.4-dist/css/bootstrap-theme.min.css" rel="stylesheet" />
<link href="~/bootstrap-3.3.4-dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="~/bootstrap-3.3.4-dist/css/bootstrap.css" rel="stylesheet" />
<script src="~/bootstrap-3.3.4-dist/js/npm.js"></script>
<script src="~/bootstrap-3.3.4-dist/js/bootstrap.min.js"></script>
<script src="~/bootstrap-3.3.4-dist/js/bootstrap.js"></script>
@section featured
{
    <div class="col-sm-10" style="margin-left:180px; margin-right:170px ; border:outset ; ">
        <br>
        <br>
        <br>
        <br>
        <div class="col-sm-7">
            <h4 style="font:bolder; color:black">Add a New Resume</h4>
            <div id="signupbox">
                <div class="panel panel-danger">
                   
                  
                    <div class="panel-body">
                        <form id="signupform" method="post" class="form-horizontal" enctype="multipart/form-data" action="/Resume/save" role="form">
                           
                                <div id="signupalert" style="display:none" class="alert alert-danger">
                                    <p>Error:</p>
                                    <span></span>
                                </div>



                                <div class="form-group">
                                    <label for="Email" class="col-md-3 control-label">Resume Title</label>
                                    <div class="col-md-9">
                                        <input type="text" required  class="form-control" name="Title" placeholder="">

                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="firstname" class="col-md-3 control-label">Desireg Job</label>
                                    <div class="col-md-9">
                                        <input type="text" required class="form-control" name="DesireJob" placeholder="">
                                    </div>
                                </div>
                                <div class="pull-right form-group">
                                    <!-- Button -->
                                    Upload Image: <input type="file" name="image" />



                                    <input type="submit" value="upload" />
                                </div>
                            </form>
</div>
                </div>



</div>
            </div>
}
